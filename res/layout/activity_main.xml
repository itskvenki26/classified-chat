<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.cs9033.classified.MainActivity"
    tools:ignore="MergeRootFrame" >

    <Button
        android:id="@+id/go_to_posts_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Go To Posts View" />

    <Button
        android:id="@+id/go_to_keys_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Show Keys" />

    <Button
        android:id="@+id/go_to_xkeys_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Show eXchange Keys" />

</LinearLayout>